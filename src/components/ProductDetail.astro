---
const { product } = Astro.props;
---

<div
  class="product-detail-overlay"
  id="product-detail-overlay"
  style="display: none;"
>
  <div class="product-detail" onclick="e => e.stopPropagation()">
    <button class="close-btn" onclick="closeDetail()">&times;</button>
    <img src={product?.image} alt={product?.name} />
    <div class="product-info">
      <h1>{product?.name}</h1>
      <p>{product?.description}</p>
      <span>${product?.price}</span>
    </div>
  </div>
</div>

<style>
  .product-detail-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 1050;
  }

  .product-detail {
    width: 40%;
    max-width: 600px;
    background: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    position: relative;
  }

  .close-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 24px;
    background: none;
    border: none;
    cursor: pointer;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  /* Media Queries for smaller screens */
  @media (max-width: 1200px) {
    .product-detail {
      width: 80%;
      padding: 10px;
    }
  }

  @media (max-width: 480px) {
    .product-detail {
      width: 90%;
      padding: 5px;
    }
  }
</style>

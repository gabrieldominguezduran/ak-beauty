---
import Layout from "../../layouts/Layout.astro";
import ProductDetail from "../../components/ProductDetail.astro";
import products from "../../content/products.json";

export const getStaticPaths = async () => {
  const paths = products.map((product) => ({
    params: {
      slug: product.id.toString(),
    },
    props: {
      product,
    },
  }));
  console.log("paths: ", paths);
  return paths;
};

const { product } = Astro.props;
---

<Layout
  title="AK Boutique Online Shop"
  description="Discover the latest trends at Poland's premier fashion destination! Shop our exclusive collection of stylish apparel and accessories for every occasion. Elevate your wardrobe with top-quality, fashionable pieces. Fast shipping across Poland. Shop now and embrace your unique style!"
>
  <ProductDetail product={product} />
</Layout>
